<%- layout('layouts/boilerplate') %>
    <div id="map" style="width : 100% ;  height: 500px"></div>
    </h2>
    <h1>All campgrounds are listed here !!</h1>
    <% for(let campground of campgrounds) { %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4 mb-2">
                    <%if(campground.images.length) {%>
                        <img class="img-fluid" alt="" src="<%=campground.images[0].url%>">
                        <% }else {%>
                            <img class="img-fluid" alt=""
                                src="https://images.unsplash.com/photo-1571687949921-1306bfb24b72?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= campground.title%>
                        </h5>

                        <p class="card-text">
                            <%= campground.description %>
                        </p>
                        <p class="card-text muted">
                            <%= campground.location %>
                        </p>
                        <a class="btn btn-info" href="/campgrounds/<%=campground._id%>">View <%= campground.title%>
                        </a>
                    </div>
                </div>

            </div>
        </div>
        <% } %>
